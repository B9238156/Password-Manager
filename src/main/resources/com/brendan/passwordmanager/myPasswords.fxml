<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.brendan.passwordmanager.PasswordsController">

          <TableView fx:id="tableView" editable="true">
        <columns>
            <TableColumn fx:id="id" text="id" visible="false" />
            <TableColumn fx:id="appName" text="Name" />
            <TableColumn fx:id="userId" text="User ID" />
            <TableColumn fx:id="password" />
            <TableColumn fx:id="description" text="Description" />
        </columns>
    </TableView>
   <Button fx:id="addPassword" layoutX="399.0" layoutY="58.0" mnemonicParsing="false" onAction="#addPassword" prefHeight="51.0" prefWidth="110.0" text="Add Password" />
   <Button fx:id="editButton" layoutX="399.0" layoutY="149.0" mnemonicParsing="false" onAction="#editPassword" prefHeight="51.0" prefWidth="110.0" text="Edit Password" />
   <Button fx:id="deletePassword" layoutX="399.0" layoutY="235.0" mnemonicParsing="false" onAction="#deletePassword" prefHeight="51.0" prefWidth="110.0" text="Delete Password" />
    <Button fx:id="exitButton" cancelButton="true" layoutX="399.0" layoutY="315.0" mnemonicParsing="false" onAction="#exit" prefHeight="51.0" prefWidth="110.0" text="Exit" />

   <TextField fx:id="currentUserName" prefHeight="25.0" prefWidth="159.0" styleClass="new-custom-text-field" stylesheets="@style.css" visible="false" />

</AnchorPane>
